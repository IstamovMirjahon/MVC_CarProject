@model IEnumerable<Entity.Models.LoginModels.Role>

<div class="table-responsive w-100" style="margin-top: 20px;">
    <h2>Role List</h2>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>#</th>
                <th>Role Name</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count(); i++)
            {
                var role = Model.ElementAt(i);
                <tr>
                    <td>@(i + 1)</td>
                    <td>@role.Name</td>
                </tr>
            }
        </tbody>
    </table>
</div>

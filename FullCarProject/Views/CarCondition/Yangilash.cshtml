@model Entity.Models.CarModels.CarCondition

@{
    ViewData["Title"] = "Update Car Condition";
}
<div class="mt-4">
    <h2>Edit Car Condition</h2>
    <form asp-action="Yangilash" method="post">
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <label asp-for="Condition" class="control-label"></label>
            <input asp-for="Condition" class="form-control" />
            <span asp-validation-for="Condition" class="text-danger"></span>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-warning mt-3">Saqlash</button>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}


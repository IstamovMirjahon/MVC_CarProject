@model Entity.Models.CarModels.CarCondition

@{
    ViewData["Title"] = "Create Car Condition";
}


<div class="mt-4">
    <h2>Create Car Company</h2>
    <form asp-action="Create" method="post">
        <div class="form-group">
            <label asp-for="Condition" class="control-label"></label>
            <input asp-for="Condition" class="form-control" />
            <span asp-validation-for="Condition" class="text-danger"></span>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary mt-3">Saqlash</button>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

